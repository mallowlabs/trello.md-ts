{
  "name": "Trello.md",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "Copy trello board information to clipboard as markdown format.",
  "homepage_url": "http://github.com/mzp/trello.md",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "js/bg.html",
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Trello.md"
  },
  "permissions": [
    "clipboardWrite",
    "https://trello.com/*"
  ]
}
